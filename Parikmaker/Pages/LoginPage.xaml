<Page x:Class="Parikmaker.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Parikmaker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин" Width="85" FontSize="24"/>
                <TextBox x:Name="tbxLogin" MinWidth="100" FontSize="24"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль" Width="85" FontSize="24"/>
                <PasswordBox x:Name="pbxPassword" MinWidth="100" FontSize="24"/>
            </StackPanel>
            <Button x:Name="btnEnter" Content="Войти" FontSize="24" Click="btnEnter_Click"/>
            
        </StackPanel>
        
    </Grid>
</Page>
